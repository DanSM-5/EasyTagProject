@model Appointment
@{
    ViewData["Title"] = "Edit Appointment";
}
@*
    Page for editting appointment information
    Accessible for Professor/Admin users only
*@
<h1>Add Appointment on @Model.Start.Date.ToShortDateString()</h1>
<div id="notification" class="text-center alert-warning">

</div>
<div asp-validation-summary="All" class="text-danger validation-summary-errors"></div>
<form asp-action="EditAppointment" asp-controller="AppointmentCRUD" method="post">
    <input asp-for="Id" type="hidden"/>
    <partial name="AppointmentFieldsPartial" for="@Model" />
    <div class="form-group">
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="RedirectToRoom" asp-controller="Appointment"
                        asp-route-code="@Model.RoomCode"
                        asp-route-pDate="@Model.Start.Date.ToString("MM-dd-yyyy")"
                        class="btn btn-secondary">
                    Cancel
                </a>
            </div>
            <div class="col">
                <partial name="ButtonRepeatAppointmentPartial" for="@Model" />
            </div>
        </div>
    </div>
</form>
<script defer src="~/js/notification.js"></script>