<!--
    Navigation bar options for Admin users
-->

<a class="nav-link text-white" asp-action="Index" asp-controller="Home"><i class="fas fa-home"></i> Home</a>
<a asp-controller="Room" asp-action="RoomList" class="nav-link text-white"><i class="fas fa-list"></i> Room List</a>
<a asp-controller="Admin" asp-action="ManageUsers" class="nav-link text-white"><i class="fas fa-users"></i> Users</a>
@if (ViewContext.GetLoggedUserName() != UserRoles.Admin.ToString())
{
    <a asp-controller="Admin" asp-action="Edit" 
       asp-route-id="@(ViewContext.GetLoggedUserId())"
       asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()"
       class="nav-link text-white" ><i class="fas fa-user"></i> @ViewContext.GetLoggedUserName()</a>
}
else
{
    <a href="#" class="nav-link text-white disabled" ><i class="fas fa-user"></i> @ViewContext.GetLoggedUserName()</a>
}
<a class="nav-link text-white glyphicon glyphicon-log-in"
   asp-controller="Account" asp-action="Logout"
   asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()"><i class="fas fa-sign-out-alt"></i> Logout</a>
