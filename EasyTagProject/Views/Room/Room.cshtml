@model Room
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>
<div class="row">
    <div class="col text-center">Block</div>
    <div class="col text-center">Floor</div>
    <div class="col text-center">Classroom</div>
</div>
<div class="row">
    <div class="col text-center"><h2>@Model.Block</h2></div>
    <div class="col text-center"><h2>@Model.Floor</h2></div>
    <div class="col text-center"><h2>@Model.Number</h2></div>
</div>

<div class="row">
    <div class="col text-center">Status</div>
    <div class="col text-center">Type</div>
</div>

<div class="row">
    <div class="col text-center"><h2>@Model.Status</h2></div>
    <div class="col text-center"><h2>@Model.Type</h2></div>
</div>

<div>
    <table class="table table-active table-hover">
        <thead>
            <tr>
                <th>Hour</th>
                <th>Course</th>
                <th>Instructor</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Schedule.Appointments.Any())
            {
                @foreach (var app in Model.Schedule.Appointments)
                {
                    <tr id="@app.Id-header" class="appointment">
                        <td class="d-table-cell">@app.Start.ToShortTimeString() - @app.End.ToShortTimeString()</td>
                        <td class="d-table-cell">@app.Course</td>
                        <td class="d-table-cell">@app.UserName</td>
                    </tr>
                    <tr id="@app.Id-description" class="hideTr">
                        <td colspan="3" class="d-table-cell text-center">@app.Description</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No Appointments</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script async src="~/js/room.js" asp-append-version="true"></script>
