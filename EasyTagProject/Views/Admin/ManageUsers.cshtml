@model IEnumerable<EasyTagUser>
@{
    ViewData["Title"] = "Manage Users";
}

<h1 class="text-center">Manage Users</h1>
<div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>
<table class="table table-hover table-active">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td class="text-center" colspan="5">No user Accounts</td>
            </tr>
        }
        else
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Role</td>
                    <td>@user.Email</td>
                    <td>
                        <form asp-controller="Admin" asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <a asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <a asp-action="Create" asp-controller="Admin" class="btn btn-primary">Create</a>
</div>


