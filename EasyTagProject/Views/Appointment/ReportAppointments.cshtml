@model IEnumerable<Appointment>
@{
    ViewData["Title"] = "ReportAppointments";
}

<h1 class="justify-content-center">Report Appointments</h1>
@if (Model.Count() > 0)
{
<div class="d-flex align-content-center justify-content-center h-25">
    <a class="btn btn-primary" type="button"
       asp-action="Room"
       asp-controller="Room"
       asp-route-code="@Model.First().RoomCode">
        Accept
    </a>
</div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Message</th>
                <th>Options</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.Start.ToShortDateString() @a.Start.ToShortTimeString()</td>
                    <td>@(a.isValid ? "Appointment made successfull" : "Appointment cannot be created on this day")</td>
                    @if (a.isValid)
                    {
                        <td>
                            <div class="d-flex">
                                <a class="btn btn-warning btn-group" asp-action="EditAppointment" asp-controller="AppointmentCRUD"
                                   asp-route-code="@a.RoomCode"
                                   asp-route-id="@a.Id">
                                    Edit
                                </a>
                                <form asp-action="DeleteAppointment" asp-controller="AppointmentCRUD" method="post">
                                    <input type="hidden" name="id" value="@a.Id" />
                                    <input type="hidden" name="code" value="@a.RoomCode" />
                                    <button class="btn btn-danger btn-group">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                        <td>
                            <div class="image-sm">
                                <img class="image-sm" src="~/images/success.png" />
                            </div>
                        </td>
                    }
                    else
                    {
                        <td class="h-100">
                            <div class="text-center h-100 d-block">
                                <a class="btn btn-info"
                                   asp-action="AddAppointment" asp-controller="AppointmentCRUD"
                                   asp-route-code="@a.RoomCode"
                                   asp-route-roomId="@a.RoomId"
                                   asp-route-selectedTime="@((a.Start).ToString("MM-dd-yyyy H:mm"))">
                                    Try another time?
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="image-sm">
                                <img class="image-sm" src="~/images/fail.png" />
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex align-items-center justify-content-center h-25">
        <a class="btn btn-primary" type="button"
           asp-action="Room"
           asp-controller="Room"
           asp-route-code="@(Model.First().RoomCode)">
            Accept
        </a>
    </div>
}
else
{
    <div class="d-flex align-content-center justify-content-center">
        <p>No appointments</p>
    </div>
    <div class="d-flex align-content-center justify-content-center h-25">
        <a class="btn btn-primary" type="button"
           asp-action="RoomList"
           asp-controller="Room">
            Accept
        </a>
    </div>
}

